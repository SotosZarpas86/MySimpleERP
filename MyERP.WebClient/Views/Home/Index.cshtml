@model CustomerViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-4">
        <table class="table table-bordered table-condensed table-hover table-striped" id="myTable">
            <thead>
                <tr id="myheader">
                    <th>Customer Properties</th>
                </tr>
            </thead>
            <tbody id="myBody">
                @{
                    foreach (var item in Model.AvailableColumns)
                    {
                        <tr>
                            <td>@item</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
    <div class="col-4">
        <form asp-action="AddColumn" method="POST">
            <div class="form-group">
                <label>Enter your Column Name</label>
                <input class="form-control" asp-for="Column.ColumnName" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-4">
        <form asp-action="AddColumn" method="POST">
            <div class="form-group">
                <label>Select Column Name</label>
                <select id="drpColumnList" class="form-control" asp-for="Column.ColumnName" asp-items="@(new SelectList(Model.ColumnLists, "Value", "Text"))">
                </select>
                <input type="hidden" asp-for="Column.ColumnName" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

